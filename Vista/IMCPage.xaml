<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.Vista.IMCPage"
             Title="IMCPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Calculadora IMC" FontSize="24" HorizontalOptions="Center"/>

        <Entry Placeholder="Peso(kg)" Keyboard="Numeric" Text="{Binding Peso}"/>
        <Entry Placeholder="Altura(m)" Keyboard="Numeric" Text="{Binding Altura}"/>

        <Button Text="Calcular IMC" Command="{Binding CalcularCommand}"/>

        <Label Text="IMC" FontSize="18"/>
        <Label Text="{Binding IMC,StringFormat='{}{0:F2}'}" FontSize="18" FontAttributes="Bold"/>

        <Label Text="Clasificacion" FontSize="18"/>
        <Label Text="{Binding Resultado}" FontSize="18" FontAttributes="Bold"/>

    </VerticalStackLayout>
</ContentPage>